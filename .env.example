# .env.example - Copy to .env and customize for your environment

# ============================================================================
# PATH CONFIGURATION
# ============================================================================
# Choose based on your environment:
# - vast.ai: use /workspace paths
# - Codespaces/Local: use relative paths like ./data

# Data paths
DATA_ROOT=/workspace/data
# Or for Codespaces/Local:
# DATA_ROOT=./data

# Checkpoint paths
CHECKPOINT_ROOT=/workspace/checkpoints
# Or for Codespaces/Local:
# CHECKPOINT_ROOT=./checkpoints

# Results paths
RESULTS_ROOT=/workspace/results
# Or for Codespaces/Local:
# RESULTS_ROOT=./results

# ============================================================================
# CONFIGURATION FILE
# ============================================================================
# Path to config file (default: configs/default.yaml)
# For vast.ai: CONFIG_PATH=configs/vastai.yaml
# For Codespaces: CONFIG_PATH=configs/codespaces.yaml
CONFIG_PATH=configs/vastai.yaml

# ============================================================================
# TRAINING HYPERPARAMETERS
# ============================================================================
BATCH_SIZE=32
EPOCHS=20
LR=0.0001
EARLY_STOP_PATIENCE=10
ID_DROPOUT_PROB=0.0

# ============================================================================
# WEIGHTS & BIASES (Experiment Tracking)
# ============================================================================
# Get your API key from: https://wandb.ai/authorize
WANDB_API_KEY=your_wandb_api_key_here
WANDB_PROJECT=can-lss-mamba
WANDB_ENTITY=your_username_or_team

# Set to "true" to enable WandB logging
WANDB_ENABLED=false

# ============================================================================
# GPU CONFIGURATION
# ============================================================================
# Control which GPU(s) to use (0 for first GPU, 1 for second, etc.)
CUDA_VISIBLE_DEVICES=0

# ============================================================================
# PREPROCESSING
# ============================================================================
WINDOW_SIZE=64
STRIDE=64
